<div class="main">
    <h1>Eat-Da-Burger</h1>
    <img src="/assets/img/burger.jpg" alt="burger">
</div>

<div class="row mt-5">
    <div class="text-center col-4">
        <h2>Available Burgers</h2>
      
            {{#each burgers}}
            {{#unless devoured }}
            <li class="mt-1">
                {{burger_name}}
                <button class="devour" data-id="{{id}}">Devour!</button>
            </li>
            {{/unless}}
            {{/each}}
    
    </div>
    <div class="text-center col-4">
        <form id="create-burger-form" action="/api/burgers" method="POST">
            <input type="text" name="burger_name">
            <button>Add Burger</button>
        </form>
    </div>
    <div class="text-center col-4">
        <!-- Devoured Burger -->
        <h2>Devoured Burgers</h2>
            {{#each burgers}}
            {{#if devoured}}
            <li class="mt-1">
                <button disabled>{{burger_name}}</button>
            </li>
            {{/if}}
            {{/each}}
    </div>
</div>